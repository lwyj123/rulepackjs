{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Library",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Watch Build",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build:watch"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$tsc-watch"
			]
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "npm",
			"args": [
				"test"
			],
			"group": "test",
			"isBackground": true
		},
		{
			"label": "Run Demo",
			"type": "shell",
			"command": "node",
			"args": [
				"demo.mjs"
			],
			"dependsOn": "Build Library",
			"group": "test"
		}
	]
}